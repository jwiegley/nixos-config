{
  "dashboard": {
    "title": "MindsDB Monitoring",
    "tags": ["mindsdb", "ai", "ml", "database"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Service Status",
        "targets": [
          {
            "expr": "probe_success{service=\"mindsdb\"}",
            "refId": "A",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "UP", "color": "green"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Response Time",
        "targets": [
          {
            "expr": "probe_duration_seconds{service=\"mindsdb\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 3, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "HTTP Status Code",
        "targets": [
          {
            "expr": "probe_http_status_code{service=\"mindsdb\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 200, "color": "green"},
                {"value": 400, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Container Status",
        "targets": [
          {
            "expr": "systemd_unit_state{name=\"mindsdb.service\",state=\"active\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "INACTIVE", "color": "red"},
              {"type": "value", "value": "1", "text": "ACTIVE", "color": "green"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "graph",
        "title": "Service Availability (24h)",
        "targets": [
          {
            "expr": "probe_success{service=\"mindsdb\"}",
            "refId": "A",
            "legendFormat": "Service Up"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0, "max": 1},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "points": false,
        "pointradius": 5,
        "bars": false,
        "stack": false,
        "percentage": false,
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true, "avg": true},
        "nullPointMode": "null"
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "graph",
        "title": "Response Time (24h)",
        "targets": [
          {
            "expr": "probe_duration_seconds{service=\"mindsdb\"}",
            "refId": "A",
            "legendFormat": "Response Time"
          }
        ],
        "yaxes": [
          {"format": "s", "min": 0},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "pointradius": 5,
        "bars": false,
        "stack": false,
        "percentage": false,
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true, "avg": true, "max": true},
        "nullPointMode": "null",
        "alert": {
          "name": "MindsDB Slow Response",
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "graph",
        "title": "PostgreSQL Database Size",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"mindsdb\"} / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Database Size (MB)"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "min": 0},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "pointradius": 5,
        "bars": false,
        "stack": false,
        "percentage": false,
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true, "avg": true},
        "nullPointMode": "null"
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "graph",
        "title": "PostgreSQL Connections",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"mindsdb\"}",
            "refId": "A",
            "legendFormat": "Active Connections"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "pointradius": 5,
        "bars": false,
        "stack": false,
        "percentage": false,
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true, "avg": true, "max": true},
        "nullPointMode": "null"
      },
      {
        "id": 9,
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 20},
        "type": "table",
        "title": "Service Health Summary",
        "targets": [
          {
            "expr": "probe_success{service=\"mindsdb\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "probe_duration_seconds{service=\"mindsdb\"}",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "probe_http_status_code{service=\"mindsdb\"}",
            "refId": "C",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "job": true},
              "indexByName": {},
              "renameByName": {
                "Value #A": "Status",
                "Value #B": "Response Time (s)",
                "Value #C": "HTTP Code",
                "instance": "Instance",
                "service": "Service"
              }
            }
          }
        ]
      }
    ],
    "templating": {"list": []},
    "annotations": {"list": []},
    "time": {"from": "now-24h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "links": [
      {
        "title": "MindsDB UI",
        "url": "https://mindsdb.vulcan.lan",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "Prometheus Targets",
        "url": "https://prometheus.vulcan.lan/targets",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "Alertmanager",
        "url": "https://alertmanager.vulcan.lan",
        "type": "link",
        "icon": "external link"
      }
    ]
  },
  "folderId": 0,
  "overwrite": true
}
